// `#deffunc local` によって定義されるシンボルのスコープ・名前空間のテスト。

#module m2

// `@` でこのモジュールを指している、localなし。このモジュールに定義される。(localと同様。)
#deffunc f2@m2
	//   ^def f2_m2
	return

// `@` なし、localあり。このモジュールに定義される。
#deffunc local f3
	//         ^def f3_m2
	return

	// ==== f2 ====

	// このモジュールでは `@` なしでも参照できる。
	f2
//  ^use f2_m2

	// f2の名前空間は `@m2` と指定されているので、トップレベルの名前空間からは見つけられない。
	f2@ = 0
//  ^def f2_toplevel

	// 名前空間をつけて明示的に参照できる。
	f2@m2
//  ^use f2_m2

	// ==== f3 ====

	// このモジュールでは `@` なしでも参照できる。
	f3
//  ^use f3_m2

	// f3はlocalなので、トップレベルの名前空間からは見つけられない。
	f3@ = 0
//  ^def f3_toplevel

	// 名前空間をつけて明示的に参照できる。
	f3@m2
//  ^use f3_m2

#global

	// ==== f2 ====

	f2 = 0
//  ^def f2_toplevel

	f2@
//  ^use f2_toplevel

	f2@m2
//  ^use f2_m2

	// ==== f3 ====

	f3 = 0
//  ^def f3_toplevel

	f3@
//  ^use f3_toplevel

	f3@m2
//  ^use f3_m2
