{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Extension",
      "preLaunchTask": "npm:build",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/vscode-ext/dist/**/*.js"
      ],
      "env": {
        "HSP3_DEBUG_WINDOW_ADAPTER_DEBUG": "1",
      }
    }
  ]
}
